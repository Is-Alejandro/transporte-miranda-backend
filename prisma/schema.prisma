generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 游녢 Modelo para la tabla Rutas
model Ruta {
  id                 Int      @id @default(autoincrement()) // Primary Key
  origen             String                                  // Ciudad de origen
  destino            String                                  // Ciudad de destino
  distanciaKm        Float                                   // Distancia en kil칩metros
  duracionEstimada   Int                                     // Duraci칩n en minutos
  estado             Boolean  @default(true)                 // Activo o inactivo

  viajes             Viaje[]                                 // Relaci칩n con viajes

  @@map("rutas") // Nombre real de la tabla en la DB
}

// 游댠 Modelo vac칤o para viajes (lo completaremos luego)
model Viaje {
  id        Int    @id @default(autoincrement())
  idRuta    Int
  // ...campos que completaremos m치s adelante

  ruta      Ruta   @relation(fields: [idRuta], references: [id])
}
